
#include <stdio.h>

int main()
{
    int distancia= 0;
    int minutos = 0;
    int segundos = 0;
    int centesimas = 0;
    
    float mintoseg = 0.0;
    float centtoseg = 0.0;

    float tse = 0.0;//tiempo en segundos
    float velocidadms = 0.0;
    float velocidadkh = 0.0;

    printf("===========================================\nhola usuario, te voy a ayudar a calcular la velocidad de unos corredores\n");
    printf("ingresa la distancia en metros: ");
    scanf("%d",&distancia);
    printf("ingresa el tiempo inicia colocando los minutos: ");
    scanf("%d",&minutos);
    printf("ahora los segundos: ");
    scanf("%d",&segundos);
    printf("y por ultimo las centesimas: ");
    scanf("%d",&centesimas);

    //tse = minutos*60+segundos+centesimas/100;
    // tse = mintoseg + segundos + centtoseg
    mintoseg = minutos*60;
    centtoseg = centesimas/100;
    tse = mintoseg + segundos + centtoseg;

    //printf("la velocidad es: %f",tse);//aqui ya jala el tiempo en segundos

    velocidadms = distancia/tse;

    //printf("tu velocidad en m/s: %f", velocidadms); esto es la velocidad en m/s 
    
    velocidadkh = velocidadms*3600/1000;
    //printf("tu velocidad en km/h es: %f", velocidadkh);

    return 0;
}
